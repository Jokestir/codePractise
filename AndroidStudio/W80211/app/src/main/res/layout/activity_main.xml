<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.chirag.w80211.MainActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/getChannelListButtonName"
                android:id="@+id/getChannelButton"
                android:layout_gravity="center"
                android:background="@color/butonColor"
                android:padding="10dp"
                android:layout_marginBottom="120dp"
                android:textColor="#FFFFFF"
                android:typeface="serif"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="serif"
                android:layout_marginBottom="20dp"
                android:id="@+id/channel24ghzTitle"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="serif"
                android:layout_marginBottom="40dp"
                android:id="@+id/channels24ghzList"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="serif"
                android:id="@+id/channel5ghzTitle"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="serif"
                android:id="@+id/channels5ghzList"
                android:layout_marginBottom="40dp"
                android:textColor="#000000"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="serif"
                android:id="@+id/CountryCodeTitle"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/getCountry"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="serif"
                android:layout_marginBottom="40dp"
                android:textColor="#000000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="serif"
                android:id="@+id/MacAddressTitle"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MACID"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="serif"
                android:textColor="#000000"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
