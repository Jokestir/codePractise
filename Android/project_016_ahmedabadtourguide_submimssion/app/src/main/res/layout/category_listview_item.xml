<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_listviewitem_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="horizontal"
    android:minHeight="@dimen/category_height">

    <ImageView
        android:id="@+id/category_image"
        android:layout_width="@dimen/category_height"
        android:layout_height="@dimen/category_height"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/category_namestring"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/category_image"
        android:gravity="center"
        android:layout_centerInParent="true"/>
</LinearLayout>