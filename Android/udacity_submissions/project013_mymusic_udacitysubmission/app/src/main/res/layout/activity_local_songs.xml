<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mymusic.LocalSongsActivity">

    <TextView
        android:id="@+id/localactiv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/localactiv_summary"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/activity_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/localactiv_label"
        android:layout_margin="16dp"
        android:text="@string/localsongs_activitydescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_description"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/local_samplesong_1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="@string/localsamplesong_1" />

        <TextView
            android:id="@+id/local_samplesong_2"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="@string/localsamplesong_2" />
    </LinearLayout>

    <!--<Button-->
    <!--android:id="@+id/backto_nowplayingactivity"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_marginBottom="32dp"-->
    <!--android:text="@string/backto_nowplaying" />-->
</RelativeLayout>
