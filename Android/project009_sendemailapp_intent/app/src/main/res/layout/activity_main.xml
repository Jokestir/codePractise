<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.sendemailapp.MainActivity">

    <EditText
        android:id="@+id/recepientemailaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recepient Email Address"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        />

    <EditText
        android:id="@+id/subjectlineaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject Line"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        />

    <EditText
        android:id="@+id/contentedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendeamil"
        android:text="send email"
        android:onClick="sendemailbuttonclicked"
        />


</LinearLayout>
